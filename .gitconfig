[include]
	path = .gitconfig.local
[core]
    editor = nvim
[color]
	ui = auto
[color "branch"]
	current = red
	local = yellow
	remote = green
[color "diff"]
	meta = cyan
	frag = magenta
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[alias]
    st = status -sb
    ci = commit
    co = checkout
    br = branch
	cp = cherry-pick
	cps = cherry-pick -s
	today = diff @{yesterday}.. --stat
	wdiff = diff --word-diff=color
	wshow = show --word-diff=color
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
